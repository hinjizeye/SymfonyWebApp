{% extends 'Adminbase.html.twig' %}

{% block title %}Cases{% endblock %}

{% block body %}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
    <h1>Cases</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ case.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ case.Name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ case.Surname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ case.age }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ case.city }}</td>
            </tr>
            <tr>
                <th>WhatHappened</th>
                <td>{{ case.WhatHappened }}</td>
            </tr>
            <tr>
                <th>WhenItHappened</th>
                <td>{{ case.WhenItHappened }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ case.File }}</td>
            </tr>
            <tr>
                <th>EvidenceGallery</th>
                <td>{{ case.EvidenceGallery }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cases_index') }}">back to list</a>

    <a href="{{ path('cases_edit', {'id': case.id}) }}">edit</a>

    {{ include('admin/cases/_delete_form.html.twig') }}
            </div>
        </div>
    </section>
</div>
{% endblock %}
