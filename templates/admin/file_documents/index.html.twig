{% extends 'Gallerybase.html.twig' %}

{% block title %}FileDocuments index{% endblock %}

{% block body %}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
    <h1>FileDocuments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file_document in file_documents %}
            <tr>
                <td>{{ file_document.id }}</td>
                <td>{{ file_document.title }}</td>
                <td><img src="{{ asset('Documents/' ~file_document.image ) }}" height="40"/> </td>
                <td>
                    <a href="{{ path('file_documents_show', {'id': file_document.id}) }}">show</a>
                    <a href="{{ path('file_documents_edit', {'id': file_document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('file_documents_new', {'id': 'id'}) }}">Create new</a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
