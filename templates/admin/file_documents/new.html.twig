{% extends 'Gallerybase.html.twig' %}

{% block title %}New FileDocuments{% endblock %}

{% block body %}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Title</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
    <h1>Create new FileDocuments</h1>

    {{ include('admin/file_documents/_form.html.twig') }}

    <a href="{{ path('file_documents_index') }}">back to list</a>
            </div>
        </div>
    </section>
</div>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Image</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for doc in document %}
            <tr>
                <td>{{ doc.id }}</td>
                <td>{{ doc.title }}</td>
                <td><img src="{{ asset('Documents/' ~doc.image ) }}" height="40"/> </td>
                <td>
                    <a href="{{ path('file_documents_show', {'id': doc.id}) }}">show</a>
                    <a href="{{ path('file_documents_edit', {'id': doc.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
